<UserControl x:Class="TogetherNotes.Forms.Shipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TogetherNotes.Forms"
             xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.DataContext>
        <vm:ShipmentVM/>
    </UserControl.DataContext>

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Shipment FAQ" 
                       FontSize="18" FontWeight="Bold" Foreground="White" 
                       Margin="0,0,0,20" />

            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Question}" 
                                  Background="#272B2F" Foreground="White"
                                  Padding="10" Margin="0,5,0,5"
                                  BorderBrush="#8A16C1" BorderThickness="1">
                            <TextBlock Text="{Binding Answer}" 
                                       FontSize="14" Foreground="#DBDBDB" 
                                       TextWrapping="Wrap" 
                                       Margin="10"/>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>