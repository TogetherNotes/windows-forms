<Window x:Class="TogetherNotes.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TogetherNotes.Forms"
        xmlns:Menu="clr-namespace:TogetherNotes.Utils"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
        Title="MainWindow" Height="675" Width="1200"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" Icon="/Resources/logo_wbg_cut.png">

        <Window.DataContext>
            <vm:NavigationVM />
        </Window.DataContext>

    <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#462AD8" Offset="0"/>
                <GradientStop Color="#DA34AE" Offset="0.75"/>
                <GradientStop Color="#8A16C1" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#2A3A44" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Fila para la barra de título -->
                <RowDefinition Height="*"/>
                <!-- Resto del espacio disponible -->
            </Grid.RowDefinitions>

            <!-- Barra de título -->
            <Border Grid.Row="0" CornerRadius="10,10,0,0"  Background="#1E2A33" Margin="0,1,0,0">
                <Grid MouseDown="DockPanel_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Together Notes" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Click="MinimizeWindow" Width="30" Background="Transparent" BorderBrush="Transparent">
                            <TextBlock Text="➖" FontSize="16" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Button>
                        <Button Click="CloseWindow" Width="30" Background="Transparent" BorderBrush="Transparent">
                            <TextBlock Text="❌" FontSize="16" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Background="Transparent">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="74"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!--// Navigation panel //-->

                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Border  Background="#272B2F"/>
                    
                    <StackPanel Height="650" VerticalAlignment="Stretch">

                        <!--// Home //-->
                        
                        <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True" Margin="0,15,0,0"
                                  GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/home.png"
                                       Style="{StaticResource Image_Style}"/>

                            </Grid>

                        </Menu:Btn>

                        <!--// Customer //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                                  Command="{Binding CustomersCommand}"
                                  Margin="0,15,0,0" GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/user.png"
                                       Style="{StaticResource Image_Style}"/>

                            </Grid>

                        </Menu:Btn>

                        <!--// Products //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ProductsCommand}"
                                  Margin="0,15,0,0" GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/calendar.png"
                                       Style="{StaticResource Image_Style}"/>

                            </Grid>

                        </Menu:Btn>

                        <!--// Orders //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding OrdersCommand}"
                                  Margin="0,15,0,0" GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/map.png"
                                       Style="{StaticResource Image_Style}"/>

                            </Grid>

                        </Menu:Btn>

                        <!--// Transactions //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding TransactionsCommand}"
                                  Margin="0,15,0,0" GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/settings.png"
                                       Style="{StaticResource Image_Style}"/>


                            </Grid>

                        </Menu:Btn>

                        <!--// Shipments //-->

                        <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ShipmentsCommand}"
                                  Margin="0,15,0,0" GroupName="NavigationButton">

                            <Grid>

                                <Image Source="/Resources/info.png"
                                       Style="{StaticResource Image_Style}"/>

                            </Grid>

                        </Menu:Btn>

                    </StackPanel>

                    <!--// Settings //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding SettingsCommand}"
                              Grid.Row="1" GroupName="NavigationButton">

                        <Grid>

                            <Image Source="/Resources/apagar.png"
                                   Style="{StaticResource Image_Style}" />

                        </Grid>

                    </Menu:Btn>

                </Grid>

                <Grid Grid.Column="1">

                    <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" />

                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>
