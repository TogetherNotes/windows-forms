<UserControl x:Class="TogetherNotes.Forms.Transactions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="645" d:DesignWidth="876"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:TransactionVM />
    </UserControl.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Títol "Languages" amb suport per multi-idioma -->
        <TextBlock Text="{DynamicResource Languages}"
           FontSize="24" FontWeight="Bold"
           Foreground="White"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,30,0,20"/>

        <!-- Selector d'idioma centrat -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,30,0,30">

            <!-- Català -->
            <Border x:Name="BorderCatalan" BorderThickness="3" CornerRadius="30" BorderBrush="Transparent"
                    Margin="20">
                <Image Source="/Resources/catalan_flag.png"
                       Width="90" Height="90"
                       Cursor="Hand"
                       MouseDown="SetCatalan">
                </Image>
            </Border>

            <!-- Espanyol -->
            <Border x:Name="BorderSpanish" BorderThickness="3" CornerRadius="30" BorderBrush="Transparent"
                    Margin="20">
                <Image Source="/Resources/spain_flag.png"
                       Width="90" Height="90"
                       Cursor="Hand"
                       MouseDown="SetSpanish">
                </Image>
            </Border>

            <!-- Anglès -->
            <Border x:Name="BorderEnglish" BorderThickness="3" CornerRadius="30" BorderBrush="Transparent"
                    Margin="20">
                <Image Source="/Resources/uk_flag.png"
                       Width="90" Height="90"
                       Cursor="Hand"
                       MouseDown="SetEnglish">
                </Image>
            </Border>
        </StackPanel>

        <!-- Botó de Log Out -->
        <Button Content="Log Out"
                Click="LogoutClicked"
                Width="200" Height="50"
                Background="Red"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                BorderBrush="Black"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Grid.Row="2"
                Cursor="Hand"
                Margin="0,20,0,20"/>
    </Grid>
</UserControl>