<UserControl x:Class="TogetherNotes.Forms.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TogetherNotes.Forms"
             xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="645" d:DesignWidth="876"
             Style="{StaticResource Page_Style}">

    <Grid Background="#0000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Títol -->
        <TextBlock Text="{DynamicResource Dashboard}" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20"/>

        <!-- Contingut del Dashboard -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Secció de targetes d'informació -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource EventsToday}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="EventsCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalSuperAdmins}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="SuperAdminCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalAdmins}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="AdminCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalMaintenanceUsers}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="MaintenanceCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalAppUsers}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="AppUsersCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalArtists}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="ArtistCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalSpaces}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="SpacesCount" FontSize="24"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Gràfics -->
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalMatches}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="MatchesCount" FontSize="24"/>
                    </Grid>
                </Border>

                <Border Background="#292B3A" Padding="10" CornerRadius="10" Margin="5">
                    <Grid>
                        <TextBlock Foreground="White" Text="{DynamicResource TotalEventsDone}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Name="EventsDoneCount" FontSize="24"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>