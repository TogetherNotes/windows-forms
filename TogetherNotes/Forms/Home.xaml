<UserControl x:Class="TogetherNotes.Forms.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TogetherNotes.Forms"
             xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             Height="675" Width="1200"
             Style="{StaticResource Page_Style}">

    <Grid Background="#0000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="677*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- Títol -->
        <TextBlock Text="{DynamicResource Dashboard}" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20,20,20,20" Grid.ColumnSpan="2"/>

        <!-- Contingut del Dashboard -->
        <Grid Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Events Today -->
            <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Foreground="White" Text="{DynamicResource EventsToday}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ListView Name="EventsList" Background="Transparent" Grid.Row="1" VerticalAlignment="Stretch">
                        <ListViewItem Content="Concert at The Bar - 20:00h"/>
                        <ListViewItem Content="Jazz Night - 21:30h"/>
                        <ListViewItem Content="Open Mic - 19:00h"/>
                    </ListView>
                </Grid>
            </Border>

            <!-- Columna dreta -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Primera fila -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="SuperAdmins" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="5" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="Admins" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="12" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="Manteniment" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="3" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Segona fila -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="App Users" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="150" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="Artistes" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="42" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="Espais" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="29" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 📊 Gràfica a la part inferior -->
        <Border Background="#292B3A" Padding="10" CornerRadius="15" Margin="20" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid>
                <TextBlock Foreground="White" Text="User Registrations per Month" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <lvc:CartesianChart Name="UserChart" Grid.Row="1">
                    <lvc:CartesianChart.Series>
                        <lvc:ColumnSeries Title="Registrations" Values="{Binding UserRegistrations}"/>
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Months" Labels="{Binding Months}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Users"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>

    </Grid>
</UserControl>