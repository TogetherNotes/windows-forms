<UserControl x:Class="TogetherNotes.Forms.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TogetherNotes.Forms"
             xmlns:vm="clr-namespace:TogetherNotes.ViewModel"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             Height="600" Width="1100"
             Style="{StaticResource Page_Style}">

    <Grid Background="#0000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Títol -->
        <TextBlock Text="{DynamicResource Dashboard}" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20,20,20,5" Grid.ColumnSpan="2"/>

        <!-- Contingut del Dashboard -->
        <Grid Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Events Today -->
            <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5,5,5,0" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Foreground="White" Text="{DynamicResource EventsToday}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ListView Name="EventsList" Background="Transparent" Foreground="White" Grid.Row="1" VerticalAlignment="Stretch" BorderThickness="0">
                        <ListViewItem Content="Concert at The Bar - 20:00h"/>
                        <ListViewItem Content="Jazz Night - 21:30h"/>
                        <ListViewItem Content="Open Mic - 19:00h"/>
                    </ListView>
                </Grid>
            </Border>

            <!-- Columna dreta -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Primera fila -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalSuperAdmins}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="5" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalAdmins}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="12" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalMaintenanceUsers}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="3" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Segona fila -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalAppUsers}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="150" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalArtists}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="42" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Background="#454860" Padding="10" CornerRadius="15" Margin="5" Width="120" Height="120">
                        <Grid>
                            <TextBlock Foreground="White" Text="{DynamicResource TotalSpaces}" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            <TextBlock Foreground="White" Text="29" FontSize="28" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Gràfica a la part inferior -->
        <Border Background="#454860" Padding="10" CornerRadius="15" Margin="20" Grid.Row="2" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Títol -->
                    <RowDefinition Height="20"/>
                    <!-- Espai addicional -->
                    <RowDefinition Height="*"/>
                    <!-- Gràfica -->
                </Grid.RowDefinitions>

                <TextBlock Foreground="White" Text="{DynamicResource UserRegistrationsperMonth}" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

                <lvc:CartesianChart Name="UserChart" Grid.Row="2">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Title="Registrations" Values="{Binding UserRegistrations}"
                                PointGeometrySize="10" StrokeThickness="2"/>
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Months" Labels="{Binding Months}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Users"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>

    </Grid>
</UserControl>